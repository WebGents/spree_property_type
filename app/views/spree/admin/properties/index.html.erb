<% content_for :page_title do %>
    <%= plural_resource_name(Spree::Property) %>
<% end %>

<% content_for :page_actions do %>
    <%= button_link_to Spree.t(:new_property), new_object_url, { class: "btn-success", icon: 'add', 'data-update' => 'new_property', id: 'new_property_link' } %>
<% end %>


<div id="new_property"></div>

<table class="table table-hover" id='listing_properties' data-hook>
  <colgroup>
    <col style="width: 5%">
    <col style="width: 25%">
    <col style="width: 30%">
    <col style="width: 30%">
    <col style="width: 10%">
  </colgroup>
  <thead>
  <tr data-hook="listing_properties_header">
    <th><%= Spree.t(:icon) %></th>
    <th><%= Spree.t(:name) %></th>
    <th><%= Spree.t(:presentation) %></th>
    <th><%= Spree.t(:type) %></th>
    <th class="actions"></th>
  </tr>
  </thead>
  <tbody>
  <% @properties.each do |property| %>
    <tr id="<%= spree_dom_id property %>" data-hook="listing_properties_row" class="<%= cycle('odd', 'even')%>">
      <td><%= image_tag property.icon(:mini), :size => '24x24', :border => 1 %></td>
      <td><%= property.name %></td>
      <td><%= property.presentation %></td>
      <td><%= property.property_type_name %></td>
      <td class="actions">
        <%= link_to_edit(property, :no_text => true) %>
        <%= link_to_delete(property, :no_text => true) %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @collection %>
